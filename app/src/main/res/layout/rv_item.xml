<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivContactPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/ivContactPhoto"
        app:layout_constraintTop_toTopOf="@id/ivContactPhoto"/>
    <TextView
        android:id="@+id/tvContactNumber"
        android:text="+999890"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContactName"
        app:layout_constraintStart_toStartOf="@id/tvContactName"/>
    <ImageView
        android:id="@+id/btnCall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_phone_forwarded_24"
        android:layout_margin="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>